<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include("./header") %> 
<h2>My Tasks</h2>

<!-- Task List -->
<table border="1">
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Status</th>
        <th>Action</th>
    </tr>
    <% tasks.forEach(task => { %>
        <tr>
            <td><%= task.title %></td>
            <td><%= task.description %></td>
            <td><%= task.dueDate.toDateString() %></td>
            <td><%= task.status %></td>
            <td>
                <form action="/user/task/delete/<%= task._id %>" method="POST">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this task?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    <% }) %>
</table>

<!-- Add New Task -->
<h3>Add New Task</h3>
<form action="/user/task/add" method="POST">
    <input type="text" name="title" placeholder="Task Title" required>
    <textarea name="description" placeholder="Task Description"></textarea>
    <input type="date" name="dueDate" required>
    <button type="submit">Add Task</button>
</form>

<a href="/user/dashboard">Back to Dashboard</a>
<%- include("./footer") %> 
</body>
</html>